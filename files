# Liste des fichiers de configuration à sauvegarder

# Système de fichiers
/etc/fstab

# Démarrage
/etc/lilo.conf
/etc/mkinitrd.conf
/etc/mdadm.conf

# Réseau
/etc/HOSTNAME
/etc/hosts
/etc/hosts.allow
/etc/hosts.deny
/etc/hosts.equiv
/etc/rc.d/rc.inet1.conf
/etc/resolv.conf
/etc/rc.d/rc.firewall
/etc/rc.d/rc.ip_forward

# Services supplémentaires à lancer au démarrage
/etc/rc.d/rc.local

# Services supplémentaires à arrêter à l'extinction
/etc/rc.d/rc.local_shutdown

# Serveur DHCP
/etc/dhcpd.conf
/etc/rc.d/rc.dhcpd

# Dnsmasq
/etc/dnsmasq.conf
/etc/rc.d/rc.dnsmasq

# DNS avec Bind
/etc/named.conf
/etc/rc.d/rc.bind
/var/named/*

# Serveur Apache
/etc/httpd/httpd.conf
/etc/httpd/extra/httpd-vhosts.conf
/etc/httpd/extra/httpd-ssl.conf
/etc/rc.d/rc.httpd

# Serveur MySQL
/etc/mysqlaccess.conf
/etc/rc.d/rc.mysqld

# Serveur FTP
/etc/vfstpd.conf
/etc/vfstpd.user_list

# Serveur NTP
/etc/ntp.conf
/etc/rc.d/rc.ntpd
